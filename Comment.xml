<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="mapper.Comment">
  	<insert id="writeComment" parameterType="com.project.board.mvc.vo.CommentVO">
  		INSERT INTO comment (b_seq,c_userName,c_content,c_regDate)
  		VALUES(#{b_seq},#{c_userName},#{c_content},now())
  	</insert>
  	<select id="commentView" parameterType ="int" resultType="com.project.board.mvc.vo.CommentVO">
  		SELECT c_userName,c_content,c_regDate
  		FROM comment com join board boa on com.b_seq = boa.seq
  		WHERE b_seq = #{no}
  	</select>
  </mapper>